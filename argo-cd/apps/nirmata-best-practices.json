{
  "apiVersion": "argoproj.io/v1alpha1",
  "kind": "Application",
  "metadata": {
    "name": "nirmata-best-practices"
  },
  "spec": {
    "destination": {
      "name": "eks-everything-as-code",
      "namespace": "kyverno"
    },
    "source": {
      "repoURL": "https://nirmata.github.io/kyverno-charts",
      "chart": "best-practice-policies",
      "targetRevision": "0.1.1"
    },
    "project": "default",
    "syncPolicy": {
      "automated": {
        "prune": false,
        "selfHeal": false
      },
      "syncOptions": [
        "ServerSideApply=true"
      ]
    },
    "ignoreDifferences": [{
      "kind": "ClusterPolicy",
      "group": "kyverno.io",
      "jqPathExpressions": [
        ".spec.rules[].skipBackgroundRequests"
      ]
    }]
  }
}
